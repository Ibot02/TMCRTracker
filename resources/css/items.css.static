.count_0 {
	filter: grayscale(100%) opacity(50%);
}
.count_0.count_1 {
	filter: none;
}

.item {
	position: relative;
	margin: 2px;
	order: 1;
}
.count_text {
	position: absolute;
	right: 0;
	bottom: 0;
	text-indent: 0;
	font-weight: bold;
	text-shadow: -1px 0 white, 1px 0 white, 0 1px white, 0 -1px white;
}
